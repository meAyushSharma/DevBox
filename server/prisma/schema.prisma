generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  username       String?
  name           String?
  password       String?
  created_at     DateTime      @default(now())
  google_id      String?       @unique
  is_google_user Boolean       @default(false)
  profile_pic    String?
  composes       Compose[]
  environments   Environment[]
  images         Image[]
}

model Environment {
  id         Int      @id @default(autoincrement())
  name       String?
  userId     Int
  created_at DateTime @default(now())
  value      String
  user       User     @relation(fields: [userId], references: [id])
  images     Image[]
}

model Compose {
  id         Int      @id @default(autoincrement())
  name       String?
  userId     Int
  created_at DateTime @default(now())
  value      String
  user       User     @relation(fields: [userId], references: [id])
}

model Container {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())
  ipAddress  String
  imageId    Int
  ports      String
  image      Image    @relation(fields: [imageId], references: [id])
}

model Image {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  created_at  DateTime    @default(now())
  userId      Int
  envId       Int
  container   Container[]
  environment Environment @relation(fields: [envId], references: [id])
  user        User        @relation(fields: [userId], references: [id])
}
